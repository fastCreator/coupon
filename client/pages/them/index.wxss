page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: #f0f0f0;
}

.page {
  height: 100%;
}

.logo {
  width: 100%;
}

.search input {
  display: inline-block;
  background-color: #faf5f5;
  width: calc(100% - 80px);
  height: 40px;
  border-radius: 8px;
  padding-left: 10px;
}

.search button {
  display: inline-block;
  width: 60px;
  margin-left: 10px;
  background-color: #f96150;
  border-radius: 8px;
  font-size: 16px;
  color: #fff;
  height: 40px;
}

.list .item:nth-of-type(odd) {
  padding-right: 0;
}

.list .item {
  display: inline-block;
  width: 50%;
  overflow: hidden;
  border-left:6px solid #F0F0F0; 
  box-sizing: border-box;
  background: #fff;
}
.list .item:nth-child(even){
  border-right: 6px solid #F0F0F0;
}
.list .item image {
  width: 100%;
  height: 160px;
}
.list .item .ltr,.list .item .title{
  padding: 0 6px;
}

.list .item .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
}

.list .item .coupon {
  background: #f26166;
  color: #fff;
  border: 1px solid #f26166;
  border-radius: 5px;
  font-size: 12px;
  line-height: 12px;
  padding: 2px;
}

.list .item .endprice {
  font-size: 14px;
  line-height: 18px;
  color: #f26166;
}

.list .item .xl{
  color: #ccc;
  font-size:12px;
}
