page {
  height: 100%;
  overflow: hidden;
  padding: 0;
}

scroll-view {
  height: 100%;
}

.none {
  display: none;
}

.filter {
  display: inline-block;
  width: 100%;
  background-color: #fff;
}

.filter>view {
  font-size: 18px;
  line-height: 40px;
  text-align: center;
  display: inline-block;
  width: 24%;
  box-sizing: border-box; 
}

.filter>.checkbox {
  width: 28%;
  display: inline-block;
}

.filter .text {
  display: inline-block;
  margin-left: -2px;
}

.filter>view.active {
  color: #f26166;
}

.filter .iconfont {
  display: inline;
}

.list .item:nth-of-type(odd) {
  padding-right: 0;
}

.list .item {
  display: inline-block;
  width: 50%;
  overflow: hidden;
  border-left:6px solid #F0F0F0; 
  box-sizing: border-box;
  background: #fff;
}
.list .item:nth-child(even){
  border-right: 6px solid #F0F0F0;
}
.list .item image {
  width: 100%;
  height: 160px;
}
.list .item .ltr,.list .item .title{
  padding: 0 6px;
}

.list .item .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
}

.list .item .coupon {
  background: #f26166;
  color: #fff;
  border: 1px solid #f26166;
  border-radius: 5px;
  font-size: 12px;
  line-height: 12px;
  padding: 2px;
}

.list .item .endprice {
  font-size: 14px;
  line-height: 18px;
  color: #f26166;
}

.list .item .xl{
  color: #ccc;
  font-size:12px;
}