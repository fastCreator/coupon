page{
  background: #fff;
  padding: 0px;
  width:100%;
  box-sizing:border-box;
  padding-bottom: 50px;
}
.heade{
  position: relative;
}
.heade .search{
  padding: 0 6%;
  box-sizing: border-box;
  width:100%;
  margin: auto;
  position: absolute;
  bottom: 13%;
}
.search input{
  box-sizing: border-box;
  display: inline-block;
  background-color: #EEF0FF;
  width:100%;
  height:40px;
  border-radius: 8px;
  padding-left: 10px;
}
.search .btn{
  display: inline-block;
  width:60px;
  position: absolute;
  top:0;
  text-align: center;
  line-height: 40px;
  right:6%;
  z-index: 100;
  background-color: #ED7950;
  border-radius: 0;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
  font-size: 16px;
  color: #fff;
  height:40px;
}
.hot{
  padding: 10px;
  font-size: 14px;
}
.hot .title{
  /* color: #F8503D; */
  font-size: 14px;
}
.hot .tag{
  overflow: hidden;
}
.hot .tag .tag-item{
  display: inline;
  background-color: #F4F4F4;
  border: 1px solid #F4F4F4;
  padding: 2px 8px;
  border-radius: 8px;
  color: #998C8C;
  margin-right: 10px;
  margin-top: 10px;
  float: left;
}
.history{
  margin-top: 10px;
}
.title .iconfont{
  float: right;
  color: #333;
  font-size: 14px;
}