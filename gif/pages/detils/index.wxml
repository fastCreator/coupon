<image class="imghead" src="{{shop.itempic}}" mode="widthFix"></image>
<view class="content">
<view class="title">{{shop.itemtitle}}</view>
<view class="item1 ltr">
  <view class="price">券后包邮{{shop.itemendprice}}</view>
  <view class="numb">销量：{{shop.itemsale}}</view>
</view>
<view class="guide_article">
  <view class="t">推荐理由</view>
  <view  class="c">{{shop.guide_article}}</view>
</view>
</view>
<view class="imageList">
  <image wx:for="{{shop.taobao_image}}" src="{{item}}" mode="widthFix"></image>
</view>
<view class="fix-buttom">
  <view class="it1 iconfont icon-home_light" bindtap='gohome'>首页</view>
  <button open-type='share' class="share" plain>
    <view class="it1 it3 iconfont icon-share1" bindtap='share'>分享</view>
  </button>
  <view class="it2" bindtap='buy'>
    <view class="it1 icon-A iconfont">
      <view>{{shop.couponmoney+'元券'}}</view>
    </view>
    <view class="it2">领券购买</view>
  </view>
</view>